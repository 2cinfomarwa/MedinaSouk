{% extends 'layout_BackEnd.html.twig' %}

{% block Content %}


    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-right">
                    <ol class="breadcrumb p-0 m-0">
                        <li class="breadcrumb-item"><a href="#">Canvab</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h4 class="page-title">Commande</h4>
            </div>
        </div>
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-20">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Default Datatable</h4>
                    <p class="text-muted m-b-30 font-14">DataTables has most features enabled by
                        default, so all you need to do to use it with your own tables is to call
                        the construction function: <code>$().DataTable();</code>.
                    </p>

                    <table id="datatable" class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Numero Commande</th>
                            <th>Créée par</th>
                            <th>Description</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Prix HT</th>
                            <th>date Commande</th>
                            <th>Opérations</th>
                        </tr>
                        </thead>


                        <tbody>
                        {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.id }}</td>
                            <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.idutilisateur }}</a></td>
                            <td>{{ commande.description }}</td>
                            <td>**QTE**</td>
                            <td>PrixUnitaire</td>
                            <td>Prix HT</td>
                            <td>{% if commande.datecmd %}{{ commande.datecmd|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td> <ul>
                                    <li>
                                        <a href="{{ path('commande_show', { 'id': commande.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('commande_edit', { 'id': commande.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->



    <h1>Commandes list</h1>

    <table>
        <thead>
            <tr>
                <th>Idutilisateur</th>
                <th>Datecmd</th>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': commande.id }) }}">{{ commande.idutilisateur }}</a></td>
                <td>{% if commande.datecmd %}{{ commande.datecmd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ commande.description }}</td>
                <td>{{ commande.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('commande_show', { 'id': commande.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('commande_edit', { 'id': commande.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commande_new') }}">Create a new commande</a>
        </li>
    </ul>
{% endblock %}
