

{% block Content %}
    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}



    <div class="container">
        <div class="row justify-content-center mt-4">
            <div class="col-xs-12 col-lg-6 col-md-8">
                <div class="card">
                    <div class="card-body pt-2">
                        <div class="text-center">
                            <div class="d-inline-block border border-secondary rounded-circle text-center m-auto">
                                <h1 class="px-1"><i class="fa fa-user fa-fw"></i></h1>
                            </div>
                        </div>
                        <h5 class="card-title text-center">Cr√©er un compte </h5>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="InputName">Nom Utilisateur</label>

                                    {{ form_widget(form.username,{'attr':{'class':"form-control",'id':"InputName" ,"add-class-on-xs":"form-control-sm"}}) }}
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputEmail">Adresse email</label>


                                    {{ form_widget(form.email,{'attr':{'class':"form-control",'id':"InputEmail" ,'add-class-on-xs':"form-control-sm"}}) }}
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputPassword">Mot de passe</label>

                                    {{ form_widget(form.plainPassword.first,{'attr':{'class':"form-control",'id':"InputPassword" ,'add-class-on-xs':"form-control-sm"}}) }}







                                </div>
                                <div class="form-group col-md-6">
                                    <label for="InputPassword2">Confirmer mot de passe </label>
                                    {{ form_widget(form.plainPassword.second,{'attr':{'class':"form-control",'id':"InputPassword2" ,'add-class-on-xs':"form-control-sm"}}) }}


                                </div>
                            </div>
                            <div class="form-group">
                                <label class="mb-0" for="InputAddress">Addresse</label>
                                <textarea class="form-control" id="InputAddress" rows="2" add-class-on-xs="form-control-sm"></textarea>
                            </div>
                            <button type="submit" class="btn btn-theme btn-sm btn-block my-3" value="{{ 'registration.submit'|trans }}">Enregistrer</button>
                            {{ form_end(form) }}
                            <div class="form-group text-right">
                                <a href="{{ path('fos_user_security_login') }}" class="text-default"><small>Avez vous un compte?</small></a>
                            </div>
                            <div class="form-group mt-3 text-center">Or Register using</div>
                           <!-- <div class="text-center">
                                <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-facebook"></i> Facebook</button>
                                <button type="button" class="btn btn-info btn-sm"><i class="fa fa-twitter"></i> Twitter</button>
                                <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-google-plus"></i> Google Plus</button>
                            </div>-->
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}




