{% extends 'layout_FrontEnd.html.twig' %}

{% block Content %}
    <h1>Promotion</h1>

    <table>
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ promotion.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ promotion.description }}</td>
            </tr>
            <tr>
                <th>Taux</th>
                <td>{{ promotion.taux }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ promotion.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('promotion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('promotion_edit', { 'id': promotion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
