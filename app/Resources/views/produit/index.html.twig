{% extends 'layout_FrontEnd.html.twig' %}

{% block Content %}
    <h1>Produits list</h1>

    <table>
        <thead>
            <tr>
                <th>Idutilisateur</th>
                <th>Designation</th>
                <th>Prixunitaire</th>
                <th>Qtestock</th>
                <th>Tauxtva</th>
                <th>Image</th>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produit_show', { 'id': produit.id }) }}">{{ produit.idutilisateur }}</a></td>
                <td>{{ produit.designation }}</td>
                <td>{{ produit.prixunitaire }}</td>
                <td>{{ produit.qtestock }}</td>
                <td>{{ produit.tauxtva }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produit_show', { 'id': produit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'id': produit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">Create a new produit</a>
        </li>
    </ul>
{% endblock %}
