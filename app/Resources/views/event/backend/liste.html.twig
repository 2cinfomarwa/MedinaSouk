{% extends 'layout_BackEnd.html.twig' %}

{% block Content %}


    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-right">
                    <ol class="breadcrumb p-0 m-0">
                        <li class="breadcrumb-item"><a href="#">Canvab</a></li>
                        <li class="breadcrumb-item"><a href="#">Tables</a></li>
                        <li class="breadcrumb-item active">Datatable</li>
                    </ol>
                </div>
                <h4 class="page-title">Liste des evenements</h4>
            </div>
        </div>
    </div>
    <!-- end page title end breadcrumb -->
    <div class="row">
        <div class="col-12">
            <div class="card m-b-20">
                <div class="card-body">

                    <h4 class="mt-0 header-title">Default Datatable</h4>
                    <p class="text-muted m-b-30 font-14">DataTables has most features enabled by
                        default, so all you need to do to use it with your own tables is to call
                        the construction function: <code>$().DataTable();</code>.
                    </p>

                    <table id="datatable" class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Libelle</th>
                            <th>Description</th>
                            <th>Date Event</th>
                            <th>Lieu</th>
                            <th>Image</th>

                        </tr>
                        </thead>


                        <tbody>
                        {% for event in events %}
                        <tr>
                            <td>{{ event.libelle }}</td>
                            <td>{{ event.description }}</td>
                            <td>{{ event.dateevent|date('Y-m-d H:i:s') }}</td>
                            <td>{{ event.idlieu.libelle}}</td>
                            <td>{{ event.image }}</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->


{% endblock %}
