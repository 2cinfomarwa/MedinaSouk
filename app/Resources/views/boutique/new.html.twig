{% extends 'layout_FrontEnd.html.twig' %}

{% block Content %}
    <div class="col-md-8 mb-3">
        <div class="title"><span>Créez votre boutique en ligne</span></div>
        <form method="POST">
            <div class="form-group">
                <label for="InputName">Shop's name</label>
                <input type="text" name="name" class="form-control" id="InputName" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label for="InputEmail1">Description</label>
                <input type="email" class="form-control" name="description" id="InputEmail1" placeholder="Add a description for your shop !">
            </div>
            <div class="form-group">
                <label for="InputSubject">Adresse</label>
                <input type="text" name="adresse" class="form-control" id="InputSubject" placeholder="Your address">
            </div>
            <div class="form-group">
                <label for="InputSubject">Disponibilité</label>
                <input type="text" name="adresse" class="form-control" id="InputSubject" placeholder="Ouvert, Fermé ...">
            </div>
            <button class="btn btn-outline-default btn-select text-right dropdown-toggle" name="username" type="button" id="dropdownSelect2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width:100%"><span class="float-left">2</span></button>
            <button type="submit" class="btn btn-theme btn-sm">Submit</button>
        </form>
    </div>

    <h1>Boutique creation</h1>


    <ul>
        <li>
            <a href="{{ path('boutique_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
